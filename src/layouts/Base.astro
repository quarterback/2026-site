---
import ThemeToggle from '../components/ThemeToggle.astro';
import StatusTicker from '../components/StatusTicker.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Designer focused on public systems and decision-making" } = Astro.props;

const tickerItems = [
  { label: "Name", value: "Ron Bronson" },
  { label: "Work", value: "View", url: "/#work" },
  { label: "About", value: "Read", url: "/about" },
  { label: "Media", value: "Watch", url: "/media" },
  { label: "Coaching", value: "Learn", url: "/coaching" },
  { label: "Contact", value: "Connect", url: "/#contact" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Using Inter as a clean, professional option - swap for preferred font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <style>
      :root {
        --font-sans: 'Inter', system-ui, sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
      }
    </style>
  </head>
  <body>
    <StatusTicker items={tickerItems} />
    <ThemeToggle />
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
