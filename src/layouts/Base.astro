---
import ThemeToggle from '../components/ThemeToggle.astro';
import StatusTicker from '../components/StatusTicker.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Founder building trust infrastructure and governance primitives for AI-mediated institutions. Decision-layer architecture for automated systems." } = Astro.props;

const tickerItems = [
  { label: "Work", url: "/#work" },
  { label: "About", url: "/about" },
  { label: "Coaching", url: "/coaching" },
  { label: "Contact", url: "/#contact" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Space Grotesk for headers/callouts, Inter for body, JetBrains Mono for code/metrics -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
      :root {
        --font-grotesk: 'Space Grotesk', system-ui, sans-serif;
        --font-sans: 'Inter', system-ui, sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
      }
    </style>
  </head>
  <body>
    <StatusTicker items={tickerItems} />
    <ThemeToggle />
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/design-tokens.css";
  @import "../styles/global.css";
</style>
