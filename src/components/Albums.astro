---
interface Album {
  title: string;
  artist: string;
  url?: string;
}

interface Props {
  albums: Album[];
  title?: string;
}

const { albums, title = 'Listening To' } = Astro.props;
---

<div class="albums-list">
  <h3 class="albums-list__title">{title}</h3>
  <ul>
    {albums.map((album) => (
      <li>
        {album.url ? (
          <a href={album.url} target="_blank" rel="noopener">
            <strong>{album.title}</strong> by {album.artist}
          </a>
        ) : (
          <span><strong>{album.title}</strong> by {album.artist}</span>
        )}
      </li>
    ))}
  </ul>
</div>

<style>
  .albums-list__title {
    font-size: var(--font-size-1);
    font-weight: var(--font-weight-6);
    margin-bottom: var(--size-2);
    color: var(--text-1);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
  }

  li {
    font-size: var(--font-size-1);
    color: var(--text-2);
    line-height: 1.5;
  }

  a {
    color: var(--text-2);
    text-decoration: none;
  }

  a:hover {
    color: var(--brand);
  }

  strong {
    color: var(--text-1);
  }
</style>
