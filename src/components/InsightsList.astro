---
interface Insight {
  icon?: string;
  text: string;
}

interface Props {
  insights: Insight[] | string;
}

const { insights: insightsRaw } = Astro.props;
const insights = typeof insightsRaw === 'string' ? JSON.parse(insightsRaw) : insightsRaw;
---

<ul class="insights-list">
  {insights.map(insight => (
    <li class="insight-item">
      {insight.icon && (
        <div class="insight-icon">
          <i class={`fas fa-${insight.icon}`}></i>
        </div>
      )}
      <p class="insight-text">{insight.text}</p>
    </li>
  ))}
</ul>

<style>
  .insights-list {
    list-style: none;
    padding: 0;
    margin: var(--size-6) 0;
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }

  .insight-item {
    display: flex;
    gap: var(--size-3);
    align-items: start;
    background: var(--surface-2);
    padding: var(--size-4);
    border-radius: var(--radius-2);
    border-left: 3px solid var(--brand);
  }

  .insight-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--brand) 15%, var(--surface-1));
    border-radius: var(--radius-2);
    color: var(--brand);
    font-size: var(--font-size-2);
  }

  .insight-text {
    margin: 0;
    font-size: var(--font-size-1);
    line-height: 1.5;
    color: var(--text-2);
    padding-top: var(--size-2);
  }

  @media (max-width: 600px) {
    .insight-item {
      padding: var(--size-3);
      gap: var(--size-2);
    }

    .insight-icon {
      width: 32px;
      height: 32px;
      font-size: var(--font-size-1);
    }

    .insight-text {
      font-size: var(--font-size-0);
    }
  }
</style>
