---
interface StatusItem {
  label: string;
  url: string;
}

interface Props {
  items: StatusItem[];
  name?: string;
}

const { items, name = "Ron Bronson" } = Astro.props;
---

<div class="ticker">
  <div class="ticker__container">
    <a href="/" class="ticker__name">{name}</a>
    <div class="ticker__track">
      {items.map((item, i) => (
        <>
          {i > 0 && <span class="ticker__separator">Â·</span>}
          <a href={item.url} class="ticker__link">
            {item.label}
          </a>
        </>
      ))}
    </div>
  </div>
</div>

<style>
  .ticker {
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--surface-1);
    border-bottom: 1px solid var(--surface-3);
    padding-block: var(--size-3);
    font-family: var(--font-mono);
    font-size: var(--font-size-00);
    letter-spacing: 0.02em;
  }

  .ticker__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--size-4);
    padding-inline: var(--size-5);
    max-width: 1400px;
    margin: 0 auto;
  }

  .ticker__name {
    font-weight: var(--font-weight-7);
    font-size: var(--font-size-1);
    color: var(--text-1);
    text-decoration: none;
    white-space: nowrap;
    font-family: var(--font-sans);
  }

  .ticker__name:hover {
    color: var(--brand);
  }

  .ticker__track {
    display: flex;
    align-items: center;
    gap: var(--size-3);
    white-space: nowrap;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    -webkit-overflow-scrolling: touch;
  }

  .ticker__track::-webkit-scrollbar {
    display: none;
  }

  @media (max-width: 768px) {
    .ticker {
      font-size: 0.7rem;
      padding-block: var(--size-2);
    }

    .ticker__container {
      padding-inline: var(--size-3);
      gap: var(--size-3);
    }

    .ticker__name {
      font-size: var(--font-size-0);
    }

    .ticker__track {
      gap: var(--size-2);
    }
  }

  .ticker__separator {
    color: var(--text-3);
    font-weight: 400;
  }

  .ticker__link {
    color: var(--text-3);
    text-decoration: none;
    transition: color 0.15s ease;
    text-transform: uppercase;
  }

  .ticker__link:hover {
    color: var(--text-1);
  }

  /* Optional: animated entrance */
  @media (prefers-reduced-motion: no-preference) {
    .ticker {
      animation: ticker-in 0.4s ease-out;
    }

    @keyframes ticker-in {
      from {
        opacity: 0;
        transform: translateY(-100%);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>
