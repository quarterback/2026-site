---
interface Social {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  socials?: Social[];
}

const defaultSocials: Social[] = [
  { platform: 'Last.fm', url: 'https://last.fm/user/ronbronson', icon: 'fa-lastfm' },
  { platform: 'Bluesky', url: 'https://bsky.app/profile/ronbronson.com', icon: 'fa-cloud' },
  { platform: 'LinkedIn', url: 'https://linkedin.com/in/ronbronson', icon: 'fa-linkedin' },
  { platform: 'GitHub', url: 'https://github.com/ronbronson', icon: 'fa-github' },
  { platform: 'Instagram', url: 'https://instagram.com/ronbronson', icon: 'fa-instagram' },
  { platform: 'pi.fyi', url: 'https://pi.fyi/ronbronson', icon: 'fa-link' },
  { platform: 'Record Club', url: 'https://record.club/ronbronson', icon: 'fa-record-vinyl' },
  { platform: 'Letterboxd', url: 'https://letterboxd.com/ronbronson', icon: 'fa-film' },
  { platform: 'Mastodon', url: 'https://mastodon.social/@ronbronson', icon: 'fa-mastodon' },
  { platform: 'Literal', url: 'https://literal.club/ronbronson', icon: 'fa-book' },
  { platform: 'Mixcloud', url: 'https://mixcloud.com/908RB', icon: 'fa-mixcloud' },
];

const { socials = defaultSocials } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="social-links">
      {socials.map((social) => (
        <a
          href={social.url}
          target="_blank"
          rel="noopener"
          title={social.platform}
          class="social-link"
        >
          <i class={`fa-brands ${social.icon}`}></i>
        </a>
      ))}
    </div>
    <p>&copy; {currentYear} Ron Bronson. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    margin-top: var(--size-10);
    padding-block: var(--size-6);
    border-top: 1px solid var(--surface-3);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--size-4);
    margin-bottom: var(--size-4);
    flex-wrap: wrap;
  }

  .social-link {
    color: var(--text-2);
    font-size: var(--font-size-3);
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: var(--brand);
  }

  p {
    color: var(--text-3);
    font-size: var(--font-size-0);
    text-align: center;
    margin: 0;
  }
</style>
