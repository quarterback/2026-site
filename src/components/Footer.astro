---
interface Props {
  newsletterUrl?: string;
  fonts?: string[];
  techStack?: string[];
  socials?: Array<{ name: string; url: string }>;
}

const {
  newsletterUrl = 'https://makingpublicwork.com',
  fonts = [],
  techStack = [],
  socials = []
} = Astro.props;
---

<footer class="footer">
  <div class="footer__content">
    <nav class="footer__links">
      {socials.map(social => (
        <a href={social.url} target="_blank" rel="noopener">{social.name}</a>
      ))}
      {newsletterUrl && (
        <a href={newsletterUrl} target="_blank" rel="noopener">Newsletter</a>
      )}
    </nav>

    <div class="footer__colophon">
      <span class="colophon__text">
        {techStack.length > 0 && `Built with ${techStack.join(', ')}`}
        {techStack.length > 0 && fonts.length > 0 && ' Â· '}
        {fonts.length > 0 && fonts.join(', ')}
      </span>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-block-start: var(--size-8);
    padding-block: var(--size-6);
    border-block-start: 1px solid var(--surface-3);
  }

  .footer__content {
    max-width: 1200px;
    margin-inline: auto;
    padding-inline: var(--size-4);
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }

  .footer__links {
    display: flex;
    gap: var(--size-5);
    flex-wrap: wrap;
  }

  .footer__links a {
    font-size: var(--font-size-1);
    color: var(--text-2);
    text-decoration: none;
    transition: color 0.2s ease;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
  }

  .footer__links a:hover {
    color: var(--brand);
  }

  @media (max-width: 600px) {
    .footer__links {
      gap: var(--size-4);
    }

    .footer__links a {
      font-size: var(--font-size-0);
    }

    .colophon__text {
      font-size: 0.7rem;
    }
  }

  .footer__colophon {
    display: flex;
  }

  .colophon__text {
    font-size: var(--font-size-0);
    color: var(--text-3);
    margin: 0;
  }
</style>
