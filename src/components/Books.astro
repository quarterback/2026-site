---
interface Book {
  title: string;
  author: string;
  url?: string;
}

interface Props {
  books: Book[];
  title?: string;
}

const { books, title = 'Currently Reading' } = Astro.props;
---

<div class="books-list">
  <h3 class="books-list__title">{title}</h3>
  <ul>
    {books.map((book) => (
      <li>
        {book.url ? (
          <a href={book.url} target="_blank" rel="noopener">
            <strong>{book.title}</strong> by {book.author}
          </a>
        ) : (
          <span><strong>{book.title}</strong> by {book.author}</span>
        )}
      </li>
    ))}
  </ul>
</div>

<style>
  .books-list__title {
    font-size: var(--font-size-1);
    font-weight: var(--font-weight-6);
    margin-bottom: var(--size-2);
    color: var(--text-1);
    font-family: var(--font-mono);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
  }

  li {
    font-size: var(--font-size-1);
    color: var(--text-2);
    line-height: 1.5;
  }

  a {
    color: var(--text-2);
    text-decoration: none;
  }

  a:hover {
    color: var(--brand);
  }

  strong {
    color: var(--text-1);
  }
</style>
