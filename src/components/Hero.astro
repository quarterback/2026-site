---
interface Props {
  name: string;
  tagline: string;
  location?: string;
}

const { name, tagline, location } = Astro.props;
---

<section class="hero">
  <div class="container">
    <h1 class="hero__name">{name}</h1>
    <p class="hero__tagline">{tagline}</p>
    {location && <p class="hero__location">{location}</p>}
  </div>
</section>

<style>
  .hero {
    padding-block: var(--size-10) var(--size-8);
  }

  .hero__name {
    margin-bottom: var(--size-3);
  }

  .hero__tagline {
    font-size: clamp(var(--font-size-1), 3vw, var(--font-size-3));
    color: var(--text-2);
    margin-bottom: var(--size-2);
    max-width: 60ch;
    line-height: 1.4;
  }

  .hero__location {
    font-size: var(--font-size-1);
    color: var(--text-3);
    font-family: var(--font-mono);
  }

  @media (max-width: 600px) {
    .hero {
      padding-block: var(--size-7) var(--size-6);
    }

    .hero__name {
      margin-bottom: var(--size-2);
    }
  }
</style>
