---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<div class="about">
  <div class="about__content" set:html={content} />
</div>

<style>
  .about {
    max-width: 75ch;
  }

  .about__content {
    font-size: var(--font-size-2);
    line-height: var(--font-lineheight-3);
    color: var(--text-2);
  }

  .about__content :global(p) {
    margin-bottom: var(--size-4);
  }

  .about__content :global(p:last-child) {
    margin-bottom: 0;
  }

  .about__content :global(strong) {
    color: var(--text-1);
    font-weight: var(--font-weight-6);
  }

  .about__content :global(em) {
    color: var(--text-3);
    font-style: normal;
    font-family: var(--font-mono);
    font-size: 0.9em;
  }
</style>
