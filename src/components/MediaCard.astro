---
interface Props {
  title: string;
  source: string;
  description?: string;
  mediaType: 'podcast' | 'video' | 'audio' | 'article' | 'talk' | 'interview' | 'feature';
  url?: string;
  embedUrl?: string;
  date?: string;
  image?: string;
}

const { title, source, description, mediaType, url, embedUrl, date, image } = Astro.props;
const shouldEmbed = embedUrl && ['podcast', 'video', 'talk'].includes(mediaType);
const linkUrl = url || embedUrl || '#';

// Convert YouTube watch URLs to embed URLs
const getEmbedUrl = (rawUrl: string) => {
  if (rawUrl.includes('youtube.com/watch?v=')) {
    const videoId = rawUrl.split('v=')[1]?.split('&')[0];
    return `https://www.youtube.com/embed/${videoId}`;
  }
  if (rawUrl.includes('youtu.be/')) {
    const videoId = rawUrl.split('youtu.be/')[1]?.split('?')[0];
    return `https://www.youtube.com/embed/${videoId}`;
  }
  return rawUrl;
};

const finalEmbedUrl = embedUrl ? getEmbedUrl(embedUrl) : '';
---

<article class="media-card">
  <div class="media-header">
    <span class="media-type">{mediaType}</span>
    {date && <span class="media-date">{date}</span>}
  </div>
  <h3 class="media-title">{title}</h3>
  <p class="media-source">{source}</p>
  {description && <p class="media-description">{description}</p>}

  {image && (
    <a href={linkUrl} target="_blank" rel="noopener" class="media-image-link">
      <img src={image} alt={title} class="media-image" />
    </a>
  )}

  {shouldEmbed ? (
    <div class="media-embed">
      <iframe
        src={finalEmbedUrl}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        loading="lazy"
      ></iframe>
    </div>
  ) : (
    <a href={linkUrl} target="_blank" rel="noopener" class="media-external-link">
      Read article â†’
    </a>
  )}
</article>

<style>
  .media-card {
    border-bottom: 1px solid var(--surface-3);
    padding-bottom: var(--size-4);
  }

  .media-card:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .media-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--size-2);
    font-size: var(--font-size-0);
    font-family: var(--font-mono);
  }

  .media-type {
    color: var(--brand);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-weight-6);
  }

  .media-date {
    color: var(--text-3);
  }

  .media-title {
    font-size: var(--font-size-2);
    font-weight: var(--font-weight-6);
    color: var(--text-1);
    margin-bottom: var(--size-2);
  }

  .media-source {
    font-size: var(--font-size-1);
    color: var(--text-2);
    margin: 0;
  }

  .media-description {
    font-size: var(--font-size-1);
    color: var(--text-2);
    line-height: 1.6;
    margin: var(--size-3) 0 var(--size-4);
  }

  .media-image-link {
    display: block;
    margin: var(--size-3) 0;
    border-radius: var(--radius-2);
    overflow: hidden;
  }

  .media-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-2);
    transition: transform 0.2s;
  }

  .media-image-link:hover .media-image {
    transform: scale(1.02);
  }

  .media-embed {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: var(--radius-2);
    background: var(--surface-1);
    margin-top: var(--size-3);
  }

  .media-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: var(--radius-2);
  }

  .media-external-link {
    display: inline-flex;
    align-items: center;
    font-size: var(--font-size-1);
    color: var(--brand);
    font-weight: var(--font-weight-5);
    text-decoration: none;
    margin-top: var(--size-3);
  }

  .media-external-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .media-title {
      font-size: var(--font-size-1);
    }

    .media-card {
      padding-bottom: var(--size-3);
    }
  }
</style>
