---
interface Props {
  email: string;
  socials?: { name: string; url: string }[];
}

const { email, socials = [] } = Astro.props;
---

<div class="contact">
  <a href={`mailto:${email}`} class="contact__email">{email}</a>
  {socials.length > 0 && (
    <nav class="contact__socials">
      {socials.map(social => (
        <a href={social.url} target="_blank" rel="noopener">{social.name}</a>
      ))}
    </nav>
  )}
</div>

<style>
  .contact {
    display: flex;
    align-items: center;
    gap: var(--size-5);
    flex-wrap: wrap;
  }

  .contact__email {
    font-size: var(--font-size-2);
    font-weight: var(--font-weight-5);
    color: var(--text-1);
  }

  .contact__email:hover {
    color: var(--brand);
  }

  .contact__socials {
    display: flex;
    gap: var(--size-4);
    flex-wrap: wrap;
  }

  .contact__socials a {
    font-size: var(--font-size-1);
    color: var(--text-3);
  }

  .contact__socials a:hover {
    color: var(--brand);
  }
</style>
