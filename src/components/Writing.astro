---
interface Post {
  title: string;
  url?: string;
  link?: string;
  date?: Date | string;
  pubDate?: string;
}

interface Props {
  posts: Post[];
  title?: string;
  blogUrl?: string;
}

const { posts, title = 'Writing', blogUrl = 'https://blog.ronbronson.com' } = Astro.props;

function formatDate(date: Date | string) {
  const d = typeof date === 'string' ? new Date(date) : date;
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(d);
}
---

<section class="writing">
  <h2 class="section-heading">{title}</h2>

  <ul class="writing__posts">
    {posts.map((post) => {
      const postUrl = post.url || post.link || '#';
      const postDate = post.date || post.pubDate || new Date();

      return (
        <li class="post-item">
          <a href={postUrl} target="_blank" rel="noopener" class="post-item__link">
            <h3 class="post-item__title">{post.title}</h3>
            <time class="post-item__date" datetime={typeof postDate === 'string' ? postDate : postDate.toISOString()}>
              {formatDate(postDate)}
            </time>
          </a>
        </li>
      );
    })}
  </ul>

  {blogUrl && (
    <a href={blogUrl} target="_blank" rel="noopener" class="writing__more">
      View all posts â†’
    </a>
  )}
</section>

<style>
  .writing {
    margin-top: var(--size-6);
    margin-bottom: 0;
  }

  .section-heading {
    font-size: clamp(var(--font-size-2), 4vw, var(--font-size-3));
    margin-bottom: var(--size-4);
    font-family: var(--font-mono);
    font-weight: var(--font-weight-6);
  }

  .writing__posts {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
  }

  .post-item__link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--size-3);
    text-decoration: none;
    padding: var(--size-2);
    border-radius: var(--radius-1);
    transition: background-color 0.2s ease;
  }

  .post-item__link:hover {
    background: var(--surface-2);
  }

  .post-item__title {
    font-size: var(--font-size-1);
    font-weight: var(--font-weight-5);
    color: var(--text-1);
    margin: 0;
    flex: 1;
  }

  .post-item__link:hover .post-item__title {
    color: var(--brand);
  }

  .post-item__date {
    font-size: var(--font-size-0);
    color: var(--text-3);
    flex-shrink: 0;
  }

  .writing__more {
    display: inline-flex;
    align-items: center;
    margin-top: var(--size-4);
    font-size: var(--font-size-1);
    color: var(--brand);
    font-weight: var(--font-weight-5);
    text-decoration: none;
  }

  .writing__more:hover {
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .post-item__link {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--size-1);
    }
  }
</style>
