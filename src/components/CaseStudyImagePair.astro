---
interface Props {
  src1: string;
  src2: string;
  caption?: string;
  alt1?: string;
  alt2?: string;
}

const { src1, src2, caption, alt1 = '', alt2 = '' } = Astro.props;
---

<figure class="case-study-image-pair">
  <div class="image-pair-grid">
    <img src={src1} alt={alt1} loading="lazy" />
    <img src={src2} alt={alt2} loading="lazy" />
  </div>
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .case-study-image-pair {
    margin: var(--size-8) 0;
  }

  .image-pair-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--size-4);
  }

  .image-pair-grid img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-2);
    object-fit: cover;
  }

  .case-study-image-pair figcaption {
    margin-top: var(--size-3);
    font-size: var(--font-size-0);
    color: var(--text-2);
    font-style: italic;
    text-align: center;
  }

  @media (max-width: 768px) {
    .image-pair-grid {
      grid-template-columns: 1fr;
      gap: var(--size-3);
    }
  }
</style>
